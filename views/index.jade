extends layout

block content
  .container
    form.form-signin(role='form')
      h2.form-signin-heading Please sign in
      input.form-control(type='email', placeholder='Email address', required='required', autofocus='autofocus')
      input.form-control(type='password', placeholder='Password', required='required')
      label.checkbox
        input(type='checkbox', value='remember-me')
        | Remember me
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
      a.btn.btn-lg.btn-primary.btn-block(href='/admin/#/overview') Go To Admin Page

    p(style='margin: auto;')
      form(method='post', action='/login')
        input(type='submit', value='Test Login')
